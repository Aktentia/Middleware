<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <Version>4.0.0</Version>
    <TargetFrameworks>netstandard2.0;netcoreapp3.0</TargetFrameworks>
    <AssemblyName>Hellang.Middleware.ProblemDetails</AssemblyName>
    <RootNamespace>Hellang.Middleware.ProblemDetails</RootNamespace>
    <Description>Error handling middleware, using RFC7807</Description>
    <PackageId>Hellang.Middleware.ProblemDetails</PackageId>
    <PackageTags>middleware;error;exception;RFC7807</PackageTags>
    <PackageIconUrl>https://raw.githubusercontent.com/khellang/Middleware/master/etc/problem-logo.png</PackageIconUrl>
    <RestorePackagesWithLockFile>true</RestorePackagesWithLockFile>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.1.3" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.0'">
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Reflection.Metadata" Version="1.6.0" />
    <PackageReference Include="Microsoft.Extensions.StackTrace.Sources" Version="3.0.0-*" PrivateAssets="All" />
    <PackageReference Include="Microsoft.Extensions.TypeNameHelper.Sources" Version="3.0.0-*" PrivateAssets="All" />
  </ItemGroup>
</Project>